<% @questions.each do |question| %>
  <h1>Would you rather </h1>
  <%= question.a_answer %>
  <%= vote_percentage(question.a_votes, question.b_votes) %>%
  <%= form_for question do |f| %>
    <%= f.hidden_field :a_votes, :value => question.a_votes + 1 %>
    <%= f.submit "Choose" %>
  <%end%>
  <%= question.b_answer %>
  <%= vote_percentage(question.b_votes, question.a_votes) %>%
  <%= form_for question do |f| %>
    <%= f.hidden_field :b_votes, :value => question.b_votes + 1 %>
    <%= f.submit "Choose" %>
  <%end%>
<%end%>
