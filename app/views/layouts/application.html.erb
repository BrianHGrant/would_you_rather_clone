<!DOCTYPE html>
<html>
  <head>
    <title>WouldYouRatherClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar-inverse navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Would You Rather</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Sort", root_path%></li>
            <li><%= link_to "Categories", root_path%></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= form_tag(questions_path, method: "get", class: "navbar-form") do %>
              <div class="form-group">
                <%= text_field_tag(:search, params[:search]) %>
                <%= submit_tag("Search", class: "btn btn-default", :name => nil) %>
              </div>
              <% end %>
            </li>
            <% if user_signed_in? %>
              <li class="nav-user"><%= current_user.email %></li>
              <li><%= link_to "Ask", new_question_path%></li>
              <li><%= link_to "Logout", destroy_user_session_path, :method => 'delete' %></li>
            <% else %>
              <li><%= link_to "Sign In", new_user_session_path %></li>
              <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <% if flash[:notice] %>
      <p class="alert alert-success"><%= flash[:notice] %></p>
    <% elsif flash[:alert] %>
      <p class="alert alert-danger"><%= flash[:alert] %></p>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
